/* ****************************************************************************
 * Colors
 *************************************************************************** */
html[data-theme="light"] {
  /* teal in the original theme */
  --pst-color-primary: {{ calculate_color("primary", 500) }};
  --pst-color-primary-bg: {{ calculate_color("primary", 100) }};
  /* violet in the original theme */
  --pst-color-secondary: {{ calculate_color("secondary", 500) }};
  --pst-color-secondary-bg: {{ calculate_color("secondary", 100) }};
  /* pink in the original theme */
  --pst-color-accent: {{ calculate_color("accent", 500) }};
  --pst-color-accent-bg: {{ calculate_color("accent", 100) }};
  /* gray in the original theme */
  --pst-color-background: white;
  --pst-color-on-background: white;
  --pst-color-surface: {{ calculate_color("primary", 50) }};
  --pst-color-on-surface: {{ calculate_color("primary", 900) }};
  --pst-color-text-base: {{ calculate_color("gray", 900) }};
  --pst-color-text-muted: {{ calculate_color("gray", 700) }};
  --pst-color-border: {{ calculate_color("gray", 300) }};
  --pst-color-border-muted: {{ calculate_color("gray", 200) }};
  /* info, warning, success, danger */
  --pst-color-info: {{ calculate_color("info", 500) }};
  --pst-color-info-bg: {{ calculate_color("info", 100) }};
  --pst-color-warning: {{ calculate_color("warning", 500) }};
  --pst-color-warning-bg: {{ calculate_color("warning", 100) }};
  --pst-color-success: {{ calculate_color("info", 500) }};
  --pst-color-success-bg: {{ calculate_color("info", 100) }};
  --pst-color-danger: {{ calculate_color("danger", 600) }};
  --pst-color-danger-bg: {{ calculate_color("danger", 100) }};
  /* inline code */
  --pst-color-inline-code-links: {{ calculate_color("primary", 600) }};
  --pst-color-inline-code: {{ calculate_color("accent", 700) }};
}

html[data-theme="dark"] {
  /* teal in the original theme */
  --pst-color-primary: {{ calculate_color("primary", 400) }};
  --pst-color-primary-bg: {{ calculate_color("primary", 900) }};
  /* violet in the original theme */
  --pst-color-secondary: {{ calculate_color("secondary", 400) }};
  --pst-color-secondary-bg: {{ calculate_color("secondary", 900) }};
  /* pink in the original theme */
  --pst-color-accent: {{ calculate_color("accent", 400) }};
  --pst-color-accent-bg: {{ calculate_color("accent", 900) }};
  /* gray in the original theme */
  --pst-color-background: {{ calculate_color("gray", 950) }};
  --pst-color-on-background: {{ calculate_color("gray", 900) }};
  --pst-color-surface: {{ calculate_color("primary", 900) }};
  --pst-color-on-surface: {{ calculate_color("primary", 100) }};
  --pst-color-text-base: {{ calculate_color("gray", 100) }};
  --pst-color-text-muted: {{ calculate_color("gray", 300) }};
  --pst-color-border: {{ calculate_color("gray", 600) }};
  --pst-color-border-muted: {{ calculate_color("gray", 700) }};
  /* info, warning, success, danger */
  --pst-color-info: {{ calculate_color("info", 400) }};
  --pst-color-info-bg: {{ calculate_color("info", 900) }};
  --pst-color-warning: {{ calculate_color("warning", 400) }};
  --pst-color-warning-bg: {{ calculate_color("warning", 900) }};
  --pst-color-success: {{ calculate_color("info", 400) }};
  --pst-color-success-bg: {{ calculate_color("info", 900) }};
  --pst-color-danger: {{ calculate_color("danger", 400) }};
  --pst-color-danger-bg: {{ calculate_color("danger", 900) }};
  /* inline code */
  --pst-color-inline-code-links: {{ calculate_color("primary", 400) }};
  --pst-color-inline-code: {{ calculate_color("accent", 400) }};
}
